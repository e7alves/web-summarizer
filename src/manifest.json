{
  "name": "Web Summarizer",
  "version": "1.0.0",
  "description": "Access summary content of Web pages.",
  "permissions": [
    "webNavigation",
    "activeTab",
    "tabs",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
      "default_title": "Web Summarizer",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "manifest_version": 2
}
